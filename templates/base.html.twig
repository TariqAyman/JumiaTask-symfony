<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome to Jumia Task !{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="//stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link href="//cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">
        <link href="//cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css" rel="stylesheet">
    {% endblock %}
</head>
<body>

{% block body %}
    <div class="container">
        <h1 class="mt-5 mb-5">Phone numbers</h1>

        <select id="country">
            <option value="0">Select country</option>
            {% for country in countries %}
                <option value={{ country.id }}>{{ country.name }}</option>
            {% endfor %}
        </select>

        <select id="state">
            <option value="null">Select all phone number</option>
            <option value=1>Valid phone number</option>
            <option value=0>invalid phone number</option>
        </select>

        <table id="table" class="display mt-2 table table-striped table-bordered" style="width:100%">
            <thead>
            <tr>
                <th>Country Name</th>
                <th>State</th>
                <th>Country code</th>
                <th>Phone Number</th>
            </tr>
            </thead>
        </table>

    </div>
{% endblock %}
{% block javascripts %}
    <script src="//code.jquery.com/jquery-3.5.1.js"></script>
    <script src="//cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="js/phoneNumber.js"></script>
    <script>
        var currentState = null;
        var selectedCountry = null;

        var url = '{{ url('filter') }}';

        phoneNumber.init(url);
    </script>
{% endblock %}
</body>
</html>
